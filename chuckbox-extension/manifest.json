{
  "manifest_version": 3,
  "name": "ChuckBox Sync",
  "short_name": "ChuckBox",
  "version": "1.0.1",
  "description": "Sync your Scoutbook roster to ChuckBox - the financial management app for Scout units.",
  "homepage_url": "https://chuckbox.app",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://advancements.scouting.org/*",
    "https://*.scouting.org/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://advancements.scouting.org/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
